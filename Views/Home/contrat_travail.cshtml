                <label for="">Sante :</label>
                <div id="radio">
                    @foreach (var sante in Model)
                    {           
                        <div> <input type="radio" name="sante" value="@sante.idSante"> @sante.nomSante </div>            
                    }
                </div>
            </div>
            <div class="formulaire">
                <label for="">Date de signature :</label>
                <input type="date" name="sign">
            </div>
            <div class="formulaire">
                <label for=""> <a href="">Retour</a> </label>
                <input type="submit" value="Valider">
            </div>
        </form>
    </div>
    
