@{
    Layout = "_form";
}
@model Sante[]

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/templatemo-digimedia-v1.css" />
    <link rel="stylesheet" href="~/css/essai.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    
<div class="div" style="height: 100vh!important;">
        <div class="form_essai" style="height: 100vh!important; padding-top:6vh;">
        <h1>CONTRAT DE TRAVAIL</h1>
        <div>
            <div class="haut">La société Miraculous</div>
            <div class="haut">Dument habilité aux fins de présentes</div> 
            <div class="haut">Ci après dénommée "d'Employeur",</div>
            <div class="haut">D'une part;</div>
            <div class="haut">Et</div>
            <div class="haut"> <label for="" class="info"> Mr (Mme) : </label> @ViewBag.candidat.nom  @ViewBag.candidat.prenom</div>
            <div class="haut"> <label for="" class="info"> Né(e) le : </label> @ViewBag.candidat.dtn </div>
            <div class="haut"> <label for="" class="info"> Mail : </label> @ViewBag.candidat.mail </div>
            <div class="haut"> <label for="" class="info"> Contact : </label> @ViewBag.candidat.contact </div>
        </div>
        <form action='@Url.Action("Save_Contrat","Contrat")' method="get">
            <input type="hidden" name="idtravail" value="@ViewBag.idt">
            <div class="formulaire">
                <label for="">Sante :</label>
                <div id="radio">
                    @foreach (var sante in Model)
                    {           
                        <div> <input type="radio" name="sante" value="@sante.idSante"> @sante.nomSante </div>            
                    }
                </div>
            </div>
            <div class="formulaire">
                <label for="">Date de signature :</label>
                <input type="date" name="sign">
            </div>
            <div class="formulaire">
                <label for=""> <a href="">Retour</a> </label>
                <input type="submit" value="Valider">
            </div>
        </form>
    </div>

</div>